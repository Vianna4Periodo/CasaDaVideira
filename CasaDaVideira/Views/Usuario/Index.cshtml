@model IEnumerable<CasaDaVideira.Model.Database.Model.Usuario>

@{
    ViewBag.Title = "Index";
}
<div class="container">
    <table class="table">
        <tr>

            <th>
                @Html.DisplayNameFor(model => model.Email)
            </th>           
            <th>
                @Html.DisplayNameFor(model => model.Nome)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Sobrenome)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Cpf)
            </th>           
            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>

                <td>
                    @Html.DisplayFor(modelItem => item.Email)
                </td>                
                <td>
                    @Html.DisplayFor(modelItem => item.Nome)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Sobrenome)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Cpf)
                </td>                
                <td>
                    <a data-ajax="true"
                       data-ajax-loading="#loadAjax"
                       data-ajax-method="post"
                       data-ajax-mode="replace"
                       data-ajax-success="exibirModalDetalhesCliente"
                       data-ajax-update="#modaldiv"
                       href="@Url.Action("DetailsUser", "Usuario", new { idUsuario = item.Id, info = true})"
                       class="btn btn-info">Detalhes</a>                    
                </td>
            </tr>
        }

    </table>
</div>