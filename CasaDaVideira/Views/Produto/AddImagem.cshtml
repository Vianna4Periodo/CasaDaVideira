@model CasaDaVideira.Model.Database.Model.Produto

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@using (Html.BeginForm("InsereImagem", "Produto", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
<div class="form-horizontal">
    <h4>Imagem do produto @Model.Nome</h4>

    @Html.AntiForgeryToken()

    @Html.Hidden("idProduto", Model.Id)
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    <input type="file" name="file" />
    <input type="submit" value="OK" />
    
    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Create" class="btn btn-default" />
        </div>
    </div>
</div>
}
